/* pages/index/index.wxss */

.slides{
	height:380rpx;
}
.slides navigator{
	width:100%;
	height:100%;
}
.slides image{
	width:100%;
	height:100%;
}
.grids{
	display:flex;
	flex-flow:row wrap;
	background:#fff;
	color:#999;
	font-size:28rpx;
	border-top:1rpx solid #eee;
	border-left:1rpx solid #eee;
}
.grids .item{
	display:flex;
	flex-direction:column;
	justify-content: center;
	align-items:center;
	width:250rpx;
	height:250rpx;
	border-right:1rpx solid #eee;
	border-bottom:1rpx solid #eee;
	box-sizing:border-box;

}
.grids .item image{
	width:70rpx;
	height:70rpx;
	border-radius:20rpx;
}
.grids .item text{
	display:block;
	margin:20rpx 0;
}

.links{
	display:flex;
	margin-top:20rpx;
	justify-content: space-around;
}
.links image{
	width:260rpx;
	height:120rpx;
	border-radius:20rpx;
}