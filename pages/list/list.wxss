/* pages/list/list.wxss */

.search{
	width:700rpx;
	margin:10rpx auto;
	position:relative;
}
.search input{
	width:100%;
	height:20rpx;
	border:1rpx solid #999;
	padding-left:20rpx;
	box-sizing:border-box;
	border-radius:40rpx;
}
input::input-placeholder{
	font-size:12rpx;
}
.search icon{
	position:absolute;
	right:20rpx;
	top:10rpx;
}
.cells{
	width:96%;
	margin:10rpx auto 0;
}
.cells .item{
	display:flex;
	height:240rpx;
	border-bottom:2rpx solid #ddd;
	align-items:center;

}
.cells .item image{
	flex:3;
	height:180rpx;
	
}
.cells .item .meta{
	flex:6;
	font-size:30rpx;
	padding:10rpx 0 0 30rpx;
	box-sizing:border-box;
}
.cells .item .score{
	flex:1;
	right:10rpx;
	top:15rpx;
	width:100%;
	height:40rpx;
	line-height:40rpx;
	background:#f00;
	border-radius:25rpx;
	margin-top:-100rpx;
	box-sizing:border-box;
	color:#fff;
	text-align:center;
	font-size:30rpx;
}

.loadmore{
	text-align:center;
	font-size:40rpx;
}